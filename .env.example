######################################
# üóÑÔ∏è DATABASE CONFIGURATION
######################################
# Username database PostgreSQL
POSTGRES_USER=your_postgres_user

# Password database PostgreSQL
POSTGRES_PASSWORD=your_postgres_password

# Nama database
POSTGRES_DB=rekamedchain

# Sumber koneksi database (format: postgresql://USER:PASSWORD@HOST:PORT/DBNAME?sslmode=disable)
DB_SOURCE=postgresql://your_postgres_user:your_postgres_password@db:5432/rekamedchain?sslmode=disable


######################################
# üì¶ IPFS CONFIGURATION
######################################
# URL endpoint API IPFS (contoh default untuk container)
IPFS_API=http://ipfs:5001


######################################
# üîê BACKEND & JWT CONFIGURATION
######################################
# Secret key untuk JWT (gunakan nilai random panjang)
JWT_SECRET=your_jwt_secret_here


######################################
# ‚õìÔ∏è BLOCKCHAIN CONFIGURATION
######################################
# Private key untuk akun blockchain (JANGAN gunakan yang asli di public repo)
PRIVATE_KEY=your_private_key_here

# RPC URL untuk node blockchain lokal / testnet
RPC_URL=http://hardhat:8545

# Chain ID dari jaringan blockchain (contoh: 31337 untuk Hardhat)
CHAIN_ID=31337
